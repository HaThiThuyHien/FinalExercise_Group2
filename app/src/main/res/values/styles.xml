<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorHighlight</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#594892</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/enable_thumb_blue</item>
        <item name="colorSwitchThumbNormal">@color/disable_thumb_grey</item>
        <item name="android:colorForeground">@color/disable_forground_grey</item>
    </style>

    <style name="tv_register" parent="android:Widget.TextView">
        <item name="android:layout_width">@dimen/rg_tv_width</item>
        <item name="android:layout_marginRight">@dimen/rg_tv_marginRight</item>
        <item name="android:layout_marginLeft">@dimen/rg_tv_marginLeftt</item>
        <item name="android:paddingLeft">@dimen/rg_tv_paddingLeft</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/regist_label_background</item>
        <item name="android:textSize">@dimen/rg_tv_textsize</item>
    </style>

    <style name="et_register" parent="android:Widget.EditText">
        <item name="android:layout_width">@dimen/rg_et_width</item>
        <item name="android:layout_marginRight">@dimen/rg_et_marginRight</item>
        <item name="android:layout_marginTop">@dimen/rg_et_marginTop</item>
        <!--item name="android:layout_marginLeft">@dimen/rg_et_marginLeft</item-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/rg_et_textsize</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>

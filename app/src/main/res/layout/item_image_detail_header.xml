<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/home_imgAvata_wight"
        android:layout_height="@dimen/home_imgAvata_height"
        android:src="@drawable/dummy_avatar"
        android:layout_marginStart="@dimen/home_imgAvata_marginStart"
        android:layout_marginTop="@dimen/home_imgAvata_marginTop"
        android:id="@+id/imgAvatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Jennifer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/imgAvatar"
        android:layout_toEndOf="@+id/imgAvatar"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/txtUser" />

    <Button
        android:text="Following"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:textAllCaps="false"
        android:id="@+id/btnFollow" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        app:srcCompat="@color/colorAccent"
        android:layout_below="@+id/imgAvatar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/imgPicture" />

    <LinearLayout
        android:id="@+id/rlPinMap"
        android:background="#FF13212D"
        android:layout_marginBottom="5dp"
        android:layout_alignStart="@+id/imgAvatar"
        android:layout_alignBottom="@+id/imgPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_pin_map"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/txtPinMap"
            android:textSize="10dp"
            android:text="Isle of Man, UK"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="This is beautiful street, good"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPicture"
        android:layout_alignStart="@id/rlPinMap"
        android:layout_marginTop="15dp"
        android:id="@+id/txtCaption" />

    <TextView
        android:text="#Shooping #UK #Stree"
        android:textColor="#39b1f1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCaption"
        android:layout_alignStart="@+id/txtCaption"
        android:layout_marginTop="7dp"
        android:id="@+id/txtHashtag" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFavourite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_favourite"
        app:civ_fill_color="@color/colorPrimary"
        app:civ_border_color="@color/colorPrimary"
        android:layout_alignEnd="@+id/btnFollow"
        android:layout_alignTop="@+id/txtCaption"
        android:layout_marginTop="-35dp"/>

</RelativeLayout>
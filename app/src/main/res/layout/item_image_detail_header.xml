<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/dummy_avatar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imgAvatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Jennifer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgAvatar"
        android:layout_toEndOf="@+id/imgAvatar"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/txtUser" />

    <Button
        android:text="Following"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:textAllCaps="false"
        android:id="@+id/btnFollow" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/placeholer_image_1600"
        android:layout_below="@+id/imgAvatar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/imgPicture" />

    <TextView
        android:text="Isle of Man, UK"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:background="#FF13212D"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/icon_pin_map"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgPicture"
        android:layout_alignStart="@+id/imgAvatar"
        android:layout_marginBottom="18dp"
        android:id="@+id/txtPinMap" />

    <TextView
        android:text="This is beautiful street, good"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPicture"
        android:layout_alignStart="@+id/txtPinMap"
        android:layout_marginTop="15dp"
        android:id="@+id/txtCaption" />

    <TextView
        android:text="#Shooping #UK #Stree"
        android:textColor="#39b1f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCaption"
        android:layout_alignStart="@+id/txtCaption"
        android:layout_marginTop="7dp"
        android:id="@+id/txtHashtag" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFavourite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_favourite"
        app:civ_fill_color="@color/colorPrimary"
        app:civ_border_color="@color/colorPrimary"
        android:layout_alignEnd="@+id/btnFollow"
        android:layout_alignTop="@+id/txtCaption"
        android:layout_marginTop="-35dp"/>

</RelativeLayout>
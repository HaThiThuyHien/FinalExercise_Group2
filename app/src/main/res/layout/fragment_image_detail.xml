<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.jp.socical.fragment.ImageDetailFragment">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@color/base_green"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imgAvatarDetail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Jennifer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgAvatarDetail"
        android:layout_toEndOf="@+id/imgAvatarDetail"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtUserDetail" />

    <Button
        android:text="Following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgAvatarDetail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:textAllCaps="false"
        android:id="@+id/btnFollowDetail" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:srcCompat="@color/colorAccent"
        android:layout_below="@+id/imgAvatarDetail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/imgPictureDetail" />

    <TextView
        android:text="Isle of Man, UK"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:background="#FF13212D"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/icon_pin_map"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgPictureDetail"
        android:layout_alignStart="@+id/imgAvatarDetail"
        android:layout_marginBottom="18dp"
        android:id="@+id/txtPinMap" />

    <TextView
        android:text="This is beautiful street, good"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPictureDetail"
        android:layout_alignStart="@+id/txtPinMap"
        android:layout_marginTop="15dp"
        android:id="@+id/txtCmt" />

    <TextView
        android:text="#Shooping #UK #Stree"
        android:textColor="#39b1f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCmt"
        android:layout_alignStart="@+id/txtCmt"
        android:layout_marginTop="7dp"
        android:id="@+id/txtAddressDetail" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvImgDetail"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtAddressDetail"
        android:layout_width="match_parent"
        android:background="@color/upload_background"
        android:layout_height="240dp"/>

    <TextView
        android:text="Test"
        android:id="@+id/txtCmtDetail"
        android:layout_below="@id/rvImgDetail"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableRight="@drawable/icon_send"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLike"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/icon_favorite"
        app:civ_border_color="@color/purple_view"
        app:civ_fill_color="@color/purple_view"
        app:civ_border_width="1dp" />
    />


</RelativeLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    tools:context="example.jp.socical.fragment.RegisterFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:src="@drawable/bg_login"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/rlAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">
            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/icon_round_avatar"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@drawable/icon_avatar"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/labelUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:textColor="@android:color/white"
                android:text="Username"
                android:background="@color/regist_label_background"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelUsername"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="Jenifer.wilson"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_underline"
                android:layout_below="@+id/tvUserName"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/rlUsername"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:textColor="@android:color/white"
                android:text="Email"
                android:background="@color/regist_label_background"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="jenifer.wilson@gmail.com"
                android:layout_centerHorizontal="true"
                android:maxLines="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_underline"
                android:layout_below="@+id/tvEmail"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/rlEmail"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:textColor="@android:color/white"
                android:text="Password"
                android:background="@color/regist_label_background"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="**************************"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:inputType="textPassword"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_underline"
                android:layout_below="@+id/tvPassword"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/rlPassword"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/labelConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:textColor="@android:color/white"
                android:text="Confirm Password"
                android:background="@color/regist_label_background"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tvConfirmPass"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelConfirm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="**************************"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:inputType="textPassword"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_underline"
                android:layout_below="@+id/tvConfirmPass"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/btn_sign_up"
            android:layout_below="@+id/rlConfirmPass"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</ScrollView>

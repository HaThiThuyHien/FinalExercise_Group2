<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgBackground"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/v_tut_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPurpleTransparent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/tutorial_avatar_width"
            android:layout_height="@dimen/tutorial_avatar_height"
            android:src="@drawable/dummy_avatar"
            android:layout_marginBottom="15dp" />
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Welcome, Jennifer"
            android:textSize="@dimen/tutorial_text_size"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </LinearLayout>
</RelativeLayout>